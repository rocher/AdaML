      \usebeamerfont{author in head/foot}\insertdoctype
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.5ex,dp=1ex,right]{date in head/foot}%
      \usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}
      \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
    \end{beamercolorbox}}%
  \vskip0pt%
}

%% redefined commands
%% original definitions at file beamerbasetitle.sty
\renewcommand{\title}{\@dblarg\beamer@title}
\long\def\beamer@title[#1]#2{%
  \def\inserttitle{\textbf{#2}}%
  \def\beamer@shorttitle{#1}%
}
\title{}

\renewcommand{\subtitle}{\@dblarg\beamer@subtitle}
\long\def\beamer@subtitle[#1]#2{%
  \def\insertsubtitle{\AdaMLSubtitle}
}
\subtitle{}


